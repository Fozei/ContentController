<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="1. Specify the IP\n2. Specify MAC then search IP\n3. Get UDP feed back" />

        <Button
            android:id="@+id/search_devices"
            style="@style/button"
            android:layout_marginTop="100dp"
            android:text="Mac Search" />

        <Button
            android:id="@+id/change_content"
            style="@style/button"
            android:layout_below="@id/search_devices"
            android:text="Start Show" />

        <Button
            android:id="@+id/show_sub_1"
            style="@style/button"
            android:layout_below="@id/change_content"
            android:text="Show Sub 1" />


        <Button
            android:id="@+id/show_sub_2"
            style="@style/button"
            android:layout_below="@id/show_sub_1"
            android:text="Show Sub 2"
            android:visibility="gone" />

        <Button
            android:id="@+id/swap_card"
            style="@style/button"
            android:layout_below="@id/show_sub_2"
            android:text="Swap Card" />


        <Button
            android:id="@+id/show_home_page"
            style="@style/button"
            android:layout_below="@id/swap_card"
            android:text="Show Home Page"
            android:visibility="gone" />

        <Button
            android:id="@+id/resume"
            style="@style/button"
            android:layout_below="@id/show_home_page"
            android:text="Resume" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tool_bar"
        android:layout_below="@id/main_container">

        <Button
            android:id="@+id/bt_check"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="UDP" />

        <Switch
            android:id="@+id/ss"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@id/bt_check"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/bt_check"
            android:layout_toRightOf="@id/bt_check"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_current_ip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/setting"
            android:gravity="center"
            android:text="set"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>